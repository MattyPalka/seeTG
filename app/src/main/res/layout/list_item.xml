<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="99dp"
    android:background="@color/relax_color"
    android:minHeight="99dp">

    <ImageView
        android:id="@+id/place_photo"
        android:layout_width="99dp"
        android:layout_height="99dp"
        android:scaleType="centerCrop" />

    <RelativeLayout
        android:id="@+id/text_container"
        android:layout_width="match_parent"
        android:layout_height="99dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@id/place_photo"
        android:paddingStart="16dp">

        <TextView
            android:id="@+id/place_name"
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:gravity="bottom"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="@android:color/background_light"
            android:textStyle="bold"
            tools:text="Kopalnia Zabytkowa" />

        <TextView
            android:id="@+id/place_address"
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:layout_below="@+id/place_name"
            android:gravity="top"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="@android:color/background_light"
            tools:text="ul. Szczęść Boże 81" />

        <TextView
            android:id="@+id/place_phone_number"
            android:layout_width="match_parent"
            android:layout_height="22dp"
            android:layout_below="@+id/place_address"
            android:drawablePadding="8dp"
            android:drawableStart="@drawable/ic_phone_black_24dp"
            android:gravity="top"
            android:textAppearance="?android:textAppearanceSmall"
            android:textColor="@android:color/background_light"
            tools:text="555 555 555" />

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="16dp"
            android:src="@drawable/ic_info_outline_black_24dp" />
    </RelativeLayout>

</LinearLayout>